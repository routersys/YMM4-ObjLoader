<UserControl x:Class="ObjLoader.Views.ShaderFileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ObjLoader.ViewModels"
             xmlns:converters="clr-namespace:ObjLoader.Converters"
             xmlns:localization="clr-namespace:ObjLoader.Localization"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Column="0" 
                  ItemsSource="{Binding Files}" 
                  SelectedItem="{Binding SelectedFile}"
                  HorizontalContentAlignment="Stretch"
                  VerticalContentAlignment="Center">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Grid ToolTipService.ShowDuration="30000" ToolTipService.InitialShowDelay="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.ToolTip>
                            <ToolTip MaxWidth="600" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="{Binding FileName}" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>

                                    <TextBlock Text="{Binding ShortStatus}" FontSize="12" Margin="0,0,0,5"/>

                                    <Border BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Margin="0,5,0,5"
                                            Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                    <TextBlock Text="{Binding DetailedMessage}" 
                                               FontSize="11" 
                                               TextWrapping="Wrap"
                                               Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                    <TextBlock FontSize="10" 
                                               Foreground="Gray" 
                                               Margin="0,8,0,0"
                                               Visibility="{Binding LastValidationTime, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Run Text="{x:Static localization:Texts.ShaderError_ValidationTime}"/>
                                        <Run Text=": "/>
                                        <Run Text="{Binding LastValidationTime, StringFormat='yyyy/MM/dd HH:mm:ss', Mode=OneWay}"/>
                                    </TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Grid.ToolTip>

                        <Border x:Name="Thumb" Grid.Column="0" 
                                Width="16" Height="16" Margin="0,0,5,0"
                                Background="{Binding StatusColor}"
                                BorderBrush="Gray" BorderThickness="1"
                                VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsNone}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding HasError}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="3x">
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                       From="1.0" To="0.3" Duration="0:0:0.5"
                                                                       AutoReverse="True"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                        <Grid x:Name="NoneThumb" Grid.Column="0"
                              Width="16" Height="16" Margin="0,0,5,0"
                              VerticalAlignment="Center" HorizontalAlignment="Center"
                              Visibility="Collapsed">
                            <Border BorderBrush="Gray" BorderThickness="1" Background="Transparent"/>
                            <Path Data="M0,0 L10,10 M10,0 L0,10"
                                  Stroke="Gray" StrokeThickness="2"
                                  Stretch="Uniform" Margin="3"
                                  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>

                        <TextBlock x:Name="Text" Grid.Column="1" VerticalAlignment="Center" FontSize="12">
                            <Run Text="{Binding FileName, Mode=OneWay}"/>
                        </TextBlock>

                        <TextBlock x:Name="StatusText" Grid.Column="2" 
                                   Text="{Binding ShortStatus}" 
                                   FontSize="10" 
                                   Margin="10,0,5,0"
                                   VerticalAlignment="Center"
                                   Foreground="Gray"
                                   Visibility="Collapsed"/>

                        <Button x:Name="ErrorButton" Grid.Column="3"
                                Command="{Binding RelativeSource={RelativeSource AncestorType=ComboBox}, Path=DataContext.ShowErrorDetailsCommand}"
                                CommandParameter="{Binding}"
                                Width="20" Height="20"
                                Padding="2"
                                Margin="0"
                                VerticalAlignment="Center"
                                Visibility="Collapsed"
                                ToolTip="Show detailed error information">
                            <Path Data="M11,15H13V17H11V15M11,7H13V13H11V7M12,2C6.47,2 2,6.5 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20Z" 
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                  Stretch="Uniform"/>
                        </Button>
                    </Grid>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsNone}" Value="True">
                            <Setter TargetName="NoneThumb" Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ComboBoxItem}}, Path=IsEnabled, FallbackValue=False}" Value="True">
                            <Setter TargetName="Thumb" Property="Width" Value="32"/>
                            <Setter TargetName="Thumb" Property="Height" Value="32"/>
                            <Setter TargetName="Thumb" Property="Margin" Value="0,2,10,2"/>
                            <Setter TargetName="NoneThumb" Property="Width" Value="32"/>
                            <Setter TargetName="NoneThumb" Property="Height" Value="32"/>
                            <Setter TargetName="NoneThumb" Property="Margin" Value="0,2,10,2"/>
                            <Setter TargetName="Text" Property="FontSize" Value="14"/>
                            <Setter TargetName="StatusText" Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsNone}" Value="True"/>
                                <Condition Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ComboBoxItem}}, Path=IsEnabled, FallbackValue=False}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="StatusText" Property="Visibility" Value="Collapsed"/>
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding HasError}" Value="True"/>
                                <Condition Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ComboBoxItem}}, Path=IsEnabled, FallbackValue=False}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="ErrorButton" Property="Visibility" Value="Visible"/>
                        </MultiDataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Grid.Column="1" 
                Command="{Binding SelectFileCommand}"
                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                Padding="5"
                Margin="0"
                ToolTip="Browse for shader file">
            <Path Data="M19,20H4C2.89,20 2,19.1 2,18V6C2,4.89 2.89,4 4,4H9L11,6H19A2,2 0 0,1 21,8V18A2,2 0 0,1 19,20M4,8V18H19V8H4Z" 
                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                  Stretch="Uniform"/>
        </Button>
    </Grid>
</UserControl>