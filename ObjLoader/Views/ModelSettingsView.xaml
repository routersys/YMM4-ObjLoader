<UserControl x:Class="ObjLoader.Views.ModelSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:ObjLoader.Localization"
             xmlns:c="clr-namespace:YukkuriMovieMaker.Controls;assembly=YukkuriMovieMaker.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800"
             Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
             Unloaded="OnUnloaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
        <StackPanel>

            <TextBlock Text="{x:Static l:Texts.SandboxSettings}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <Border BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="1" Padding="10" Margin="0,0,0,20" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <StackPanel>
                    <DockPanel Margin="0,0,0,10">
                        <TextBlock Text="{x:Static l:Texts.EnableSandbox}" VerticalAlignment="Center"/>
                        <c:ToggleSlider Value="{Binding IsSandboxEnforced}" HorizontalAlignment="Right"/>
                    </DockPanel>

                    <TextBlock Text="{x:Static l:Texts.AllowedDirectories}" Margin="0,0,0,5"/>
                    <Grid Height="150" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ListBox Grid.Column="0" ItemsSource="{Binding AllowedRoots}" SelectedItem="{Binding SelectedRoot, Mode=TwoWay}"
                                 Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                                 Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                                 BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <Button Content="{x:Static l:Texts.AddDirectory}" Command="{Binding AddDirectoryCommand}" Padding="10,5" Margin="0,0,0,5"/>
                            <Button Content="{x:Static l:Texts.RemoveDirectory}" Command="{Binding RemoveDirectoryCommand}" Padding="10,5" Margin="0,0,0,5"/>
                            <Button Content="{x:Static l:Texts.ClearDirectories}" Command="{Binding ClearDirectoriesCommand}" Padding="10,5"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <TextBlock Text="{x:Static l:Texts.ResourceManagement}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <Border BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="1" Padding="10" Margin="0,0,0,20" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <StackPanel>
                    <DockPanel Margin="0,0,0,10">
                        <TextBlock Text="{x:Static l:Texts.EnableAutoAudit}" VerticalAlignment="Center"/>
                        <c:ToggleSlider Value="{Binding EnableAutoAudit}" HorizontalAlignment="Right"/>
                    </DockPanel>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static l:Texts.AuditInterval}" VerticalAlignment="Center" Margin="0,0,10,5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding AuditIntervalMinutes, UpdateSourceTrigger=LostFocus}" Margin="0,0,0,5"
                                 Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                                 Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                                 BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static l:Texts.LeakThreshold}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding LeakThresholdMinutes, UpdateSourceTrigger=LostFocus}"
                                 Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                                 Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                                 BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                    </Grid>

                    <Button Content="{x:Static l:Texts.RunAudit}" Command="{Binding RunAuditCommand}" HorizontalAlignment="Left" Padding="15,5" Margin="0,0,0,10"/>
                </StackPanel>
            </Border>

            <TextBlock Text="{x:Static l:Texts.AuditResults}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <Border BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="1" Padding="10" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <StackPanel>
                    <WrapPanel Margin="0,0,0,15">
                        <StackPanel Margin="0,0,20,5" Orientation="Horizontal">
                            <TextBlock Text="{x:Static l:Texts.ActiveResources}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding LatestReport.ActiveResources}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,20,5" Orientation="Horizontal">
                            <TextBlock Text="{x:Static l:Texts.OrphanedResources}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding LatestReport.OrphanedResources}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,20,5" Orientation="Horizontal">
                            <TextBlock Text="{x:Static l:Texts.TotalAllocations}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding LatestReport.TotalAllocations}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,20,5" Orientation="Horizontal">
                            <TextBlock Text="{x:Static l:Texts.TotalDisposals}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding LatestReport.TotalDisposals}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,20,5" Orientation="Horizontal">
                            <TextBlock Text="{x:Static l:Texts.EstimatedActiveBytes}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding LatestReport.EstimatedActiveBytes}" FontWeight="Bold"/>
                        </StackPanel>
                    </WrapPanel>

                    <TextBlock Text="{x:Static l:Texts.LeakedResourcesList}" FontWeight="Bold" Margin="0,0,0,5"/>
                    <DataGrid ItemsSource="{Binding LatestReport.LeakedResources}" AutoGenerateColumns="False" Height="160" Margin="0,0,0,15"
                              Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                              Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                              BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                              HeadersVisibility="Column" IsReadOnly="True" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{x:Static l:Texts.KeyHeader}" Binding="{Binding Key}" Width="*"/>
                            <DataGridTextColumn Header="{x:Static l:Texts.TypeHeader}" Binding="{Binding ResourceType}" Width="Auto"/>
                            <DataGridTextColumn Header="{x:Static l:Texts.AgeHeader}" Binding="{Binding Age, StringFormat={}{0:hh\\:mm\\:ss}}" Width="Auto"/>
                            <DataGridTextColumn Header="{x:Static l:Texts.CreatedAtHeader}" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="Auto"/>
                            <DataGridTextColumn Header="{x:Static l:Texts.SizeHeader}" Binding="{Binding EstimatedSizeBytes}" Width="Auto"/>
                            <DataGridTextColumn Header="{x:Static l:Texts.StackTraceHeader}" Binding="{Binding StackTrace}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Text="{x:Static l:Texts.OrphanedResourcesList}" FontWeight="Bold" Margin="0,0,0,5"/>
                    <DataGrid ItemsSource="{Binding LatestReport.OrphanedResourceList}" AutoGenerateColumns="False" Height="160"
                              Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                              Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                              BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                              HeadersVisibility="Column" IsReadOnly="True" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{x:Static l:Texts.KeyHeader}" Binding="{Binding Key}" Width="*"/>
                            <DataGridTextColumn Header="{x:Static l:Texts.TypeHeader}" Binding="{Binding ResourceType}" Width="Auto"/>
                            <DataGridTextColumn Header="{x:Static l:Texts.AgeHeader}" Binding="{Binding Age, StringFormat={}{0:hh\\:mm\\:ss}}" Width="Auto"/>
                            <DataGridTextColumn Header="{x:Static l:Texts.CreatedAtHeader}" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="Auto"/>
                            <DataGridTextColumn Header="{x:Static l:Texts.SizeHeader}" Binding="{Binding EstimatedSizeBytes}" Width="Auto"/>
                            <DataGridTextColumn Header="{x:Static l:Texts.StackTraceHeader}" Binding="{Binding StackTrace}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>