<UserControl x:Class="ObjLoader.Views.ModelFileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ObjLoader.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Column="0" 
                  ItemsSource="{Binding Files}" 
                  SelectedItem="{Binding SelectedFile}"
                  HorizontalContentAlignment="Stretch">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image x:Name="Thumb" Grid.Column="0" Source="{Binding Thumbnail}" RenderOptions.BitmapScalingMode="HighQuality"
                               Width="16" Height="16" Margin="0,0,5,0"/>
                        <TextBlock x:Name="Text" Grid.Column="1" Text="{Binding FileName}" VerticalAlignment="Center"
                                   FontSize="12"/>
                    </Grid>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ComboBoxItem}}, Path=IsEnabled, FallbackValue=False}" Value="True">
                            <Setter TargetName="Thumb" Property="Width" Value="48"/>
                            <Setter TargetName="Thumb" Property="Height" Value="48"/>
                            <Setter TargetName="Thumb" Property="Margin" Value="0,2,10,2"/>
                            <Setter TargetName="Text" Property="FontSize" Value="14"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Grid.Column="1" 
                Command="{Binding SelectFileCommand}"
                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                Padding="5"
                Margin="0,0,0,0">
            <Path Data="M19,20H4C2.89,20 2,19.1 2,18V6C2,4.89 2.89,4 4,4H9L11,6H19A2,2 0 0,1 21,8V18A2,2 0 0,1 19,20M4,8V18H19V8H4Z" 
                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                  Stretch="Uniform"/>
        </Button>
    </Grid>
</UserControl>