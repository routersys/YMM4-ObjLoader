<UserControl x:Class="ObjLoader.Views.ModelFileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:assets="clr-namespace:ObjLoader.ViewModels.Assets"
             xmlns:controls="clr-namespace:ObjLoader.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Column="0" 
                  ItemsSource="{Binding Files}" 
                  SelectedItem="{Binding SelectedFile}"
                  HorizontalContentAlignment="Stretch">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <controls:ModelFileItemControl/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Grid.Column="1" 
                Command="{Binding SelectFileCommand}"
                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                Padding="5"
                Margin="0,0,0,0">
            <Path Data="M19,20H4C2.89,20 2,19.1 2,18V6C2,4.89 2.89,4 4,4H9L11,6H19A2,2 0 0,1 21,8V18A2,2 0 0,1 19,20M4,8V18H19V8H4Z" 
                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                  Stretch="Uniform"/>
        </Button>
    </Grid>
</UserControl>