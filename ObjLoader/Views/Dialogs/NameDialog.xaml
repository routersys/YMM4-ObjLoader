<Window x:Class="ObjLoader.Views.Dialogs.NameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:ObjLoader.Localization"
        Title="{x:Static l:Texts.Dialog_Name}" Height="110" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="NameBox" Grid.Row="0"
                 FontSize="18"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 BorderThickness="0"
                 Padding="5"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="{x:Static l:Texts.Dialog_Ok}" Click="Ok_Click" BorderThickness="0" Margin="0"/>
            <Button Grid.Column="1" Content="{x:Static l:Texts.Dialog_Cancel}" Click="Cancel_Click" BorderThickness="0" Margin="0"/>
        </Grid>
    </Grid>
</Window>