<UserControl x:Class="ObjLoader.Views.Reset3DTransformButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ObjLoader.ViewModels"
             xmlns:l="clr-namespace:ObjLoader.Localization"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Button Content="{x:Static l:Texts.ResetTransform}" Command="{Binding ResetCommand}"/>
    </Grid>
</UserControl>