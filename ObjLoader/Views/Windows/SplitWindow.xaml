<Window x:Class="ObjLoader.Views.Windows.SplitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:ObjLoader.Localization"
        xmlns:settings="clr-namespace:ObjLoader.ViewModels.Settings"
        xmlns:u="clr-namespace:ObjLoader.Utilities"
        xmlns:ymm="clr-namespace:YukkuriMovieMaker.Controls;assembly=YukkuriMovieMaker.Controls"
        mc:Ignorable="d"
        Title="{x:Static l:Texts.SplitWindow_Title}" Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        Closed="Window_Closed">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Windows/SplitWindow.Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}"
              MouseWheel="Viewport_MouseWheel"
              MouseDown="Viewport_MouseDown"
              MouseUp="Viewport_MouseUp"
              MouseMove="Viewport_MouseMove"
              SizeChanged="Viewport_SizeChanged">
            <Image Source="{Binding SceneImage}" Stretch="Fill"/>

            <Border HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="220" Margin="10" 
                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="1" CornerRadius="0"
                    Padding="10">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPartSelected}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsInteracting}" Value="True">
                                <Setter Property="Opacity" Value="0.3"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth}" Value="0">
                                <Setter Property="Background" Value="#CC000000"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsNarrowMode}" Value="True">
                                <Setter Property="Background" Value="#CC202020"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{x:Static l:Texts.SplitWindow_MaterialSettings}" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"/>

                        <ItemsControl ItemsSource="{Binding MaterialSettings.Groups}"/>

                        <Separator Margin="0,10"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Command="{Binding ResetMaterialCommand}" ToolTip="{x:Static l:Texts.Tip_ResetMaterial}" Margin="2" Width="30" Height="30">
                                <Path Data="M12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,12.5A0.5,0.5 0 0,1 11.5,12A0.5,0.5 0 0,1 12,11.5A0.5,0.5 0 0,1 12.5,12A0.5,0.5 0 0,1 12,12.5M12,7.2C9.9,7.2 8.2,8.9 8.2,11C8.2,14 12,17.5 12,17.5C12,17.5 15.8,14 15.8,11C15.8,8.9 14.1,7.2 12,7.2Z" Fill="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" Width="16" Height="16" Stretch="Uniform"/>
                            </Button>
                            <Button Command="{Binding SavePresetCommand}" ToolTip="{x:Static l:Texts.Tip_SavePreset}" Margin="2" Width="30" Height="30">
                                <Path Data="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z" Fill="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" Width="16" Height="16" Stretch="Uniform"/>
                            </Button>
                            <Button Command="{Binding LoadPresetCommand}" ToolTip="{x:Static l:Texts.Tip_LoadPreset}" Margin="2" Width="30" Height="30">
                                <Path Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z" Fill="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" Width="16" Height="16" Stretch="Uniform"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <Grid Grid.Column="1" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" BorderThickness="0,0,0,1" Padding="15">
                <TextBlock Text="{x:Static l:Texts.SplitWindow_Parts}" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"/>
            </Border>
            <ListView Grid.Row="1" x:Name="PartsListView" SelectionMode="Extended" 
                      ItemsSource="{Binding Parts}" SelectedItem="{Binding SelectedPart}" 
                      BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      SelectionChanged="ListView_SelectionChanged"
                      ItemTemplate="{StaticResource PartItemTemplate}"
                      ItemContainerStyle="{StaticResource PartItemContainerStyle}"/>
        </Grid>
    </Grid>
</Window>