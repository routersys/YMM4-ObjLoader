<UserControl x:Class="ObjLoader.Views.Controls.ModelFileItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:assets="clr-namespace:ObjLoader.ViewModels.Assets"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance assets:ModelFileItem}"
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../Resources/Controls/ModelFileItemControl.Resources.xaml"/>
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <Image Grid.Column="0" Source="{Binding Thumbnail}" RenderOptions.BitmapScalingMode="HighQuality"/>
        <TextBlock Grid.Column="1" Text="{Binding FileName}" VerticalAlignment="Center"/>
    </Grid>
</UserControl>