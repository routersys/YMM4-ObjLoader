<UserControl x:Class="ObjLoader.Controls.EasingGraphEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:l="clr-namespace:ObjLoader.Localization"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <UserControl.Resources>
        <Style x:Key="AnchorThumb" TargetType="Thumb">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Grid>
                            <Ellipse Fill="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="0"/>
                            <Ellipse Fill="{TemplateBinding Background}" Margin="3"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="HandleThumb" TargetType="Thumb">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse Fill="{TemplateBinding Background}" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#01000000" ClipToBounds="True" MouseLeftButtonDown="Grid_MouseLeftButtonDown" 
          MouseWheel="Grid_MouseWheel" MouseDown="Grid_MouseDown" MouseMove="Grid_MouseMove" MouseUp="Grid_MouseUp">
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="{x:Static l:Texts.Editor_ResetView}" Click="ResetView_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>

        <Border BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="1"/>

        <Canvas x:Name="BackgroundCanvas" IsHitTestVisible="False">
            <Rectangle x:Name="ReferenceFrame" Stroke="#808080" StrokeThickness="1" StrokeDashArray="4 2"/>

            <Line x:Name="GridLine" Stroke="#40808080" StrokeThickness="1"/>

            <Line x:Name="CenterLineX" Stroke="#40FFFFFF" StrokeThickness="1" StrokeDashArray="2 2"/>
            <Line x:Name="CenterLineY" Stroke="#40FFFFFF" StrokeThickness="1" StrokeDashArray="2 2"/>

            <Path x:Name="GraphLine" Stroke="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" StrokeThickness="3"/>
        </Canvas>

        <Canvas x:Name="PointCanvas"/>
    </Grid>
</UserControl>